<div class="panel pro-fill1">
  <div class="row">
    <div class="large-5 small-5 columns"></div>
    <div class="small-3 large-3 small-centered large-centered columns vcenter">
      <h4 class="subheader">My Projects</h4>
    </div> <!-- small-3 large-3 -->
    <div class="large-4 small-4 columns"></div>
  </div> <!-- /row col -->

  <div class="row">
    <div class="large-5 small-5 columns"></div>
    <div class="small-3 large-3 small-centered large-centered columns vcenter">
      <% if @projects.count < 5 %>
        <div data-reveal-id="project-form-modal-repo" class="button radius">Add Repository</div>
        <%= render 'developers/repositories' %>
      <% else %>
        <h4 class="subheader">You have created the maximum number of projects allowed</h4>
      <% end %>
    </div> <!-- small-3 large-3 -->
    <div class="large-4 small-4 columns"></div>
  </div> <!-- /row col -->

  <div class="row">
    <div class="large-12 columns" style="text-align: center;">
      <ul class="small-block-grid-2 large-block-grid-4">
        <% @projects.each do |project| %>
          <li data-reveal-id="project-form-modal-<%= project.id %>" class="project button">
            <h4 class="subheader text-vcenter"><%= "#{project.title}" %></h4>
          </li>
          <%= render 'projects/form', project: project %>
        <% end %>
      </ul>
    </div> <!-- /large-12 col -->
  </div> <!-- /row col -->

</div> <!-- /panel -->

