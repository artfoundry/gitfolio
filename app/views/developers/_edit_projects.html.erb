<div class="panel">
  <div class="row">
    <div class="large-12 columns">
      <h4>My Projects</h4>
    </div> <!-- /large-12 col -->
  </div> <!-- /row col -->

  <% if @projects.count < 5 %>
    <div class="row">
     <div class="large-12 columns">
        <div data-reveal-id=<%= "project-form-modal-#{@new_project.id}" %> class="button radius">Add Project</div>
        <%= render 'projects/form', project: @new_project %>
      </div> <!-- /large-12 col -->
    </div> <!-- /row col -->
  <% else %>
      <p>You have created the maximum number of projects allowed</p>
  <% end %>
  <div class="row">
    <div class="large-12 columns" style="text-align: center;">
      <ul class="small-block-grid-2 large-block-grid-4">
        <% @projects.each do |project| %>
          <li data-reveal-id=<%= "project-form-modal-#{project.id}" %> class="project button shadow-panel">
            Edit<br>
            <em><%= "#{project.title}" %></em>
          </li>
          <%= render 'projects/form', project: project %>
        <% end %>
      </ul>
    </div> <!-- /large-12 col -->
  </div> <!-- /row col -->
</div> <!-- /panel -->
