<div class="panel pro-background">

<!-- Profile -->
  <div class="panel profile">
    <div class="row">
      <div class="small-6 large-6 columns" style="position: relative;">
        <div class="avatar" style="top: -15px;">
          <% if @developer.github_avatar == nil %>
            <%= image_tag "logo.png", {class: "avatar-image"}%>
          <% else %>
            <%= image_tag @developer.github_avatar, {class: "avatar-image"} %>
          <% end %>
        </div>
      </div>
      <div class="small-6 large-6 columns">
        <h3 class="subheader"><%= @developer.name %></h3>
        <h5 class="subheader"><%= @developer.profession %></h5>
        <h5 class="subheader"><% link_to "@developer.email" %>Contact me</h5>
      </div>
    </div>
  </div>

  <!-- Projects -->
  <% @projects.each_with_index do |project, i| %>
    <a name="<%= i %>"></a>
    <div class="panel pro-fill<%= i % 2 %>">
      <div class="row">
    <!-- Project title -->
        <div class="large-12 columns">
          <h1 class="subheader">
            <a href=<%= project.url %> >
              <%= project.title %>
            </a>
          </h1>
          <h6><%= project.get_stars %> stars</h6>
          <h6><%= project.get_forks %> forks</h6>
          <h6><%= project.watchers %> watchers</h6>
          <h4>My Commits:<%= project.commits %></h4>
        </div> <!-- /large-12 col -->
      </div> <!-- /row -->
    <!-- Feature chunk -->
      <div class="row">
        <div class="large-12 columns">
          <div class="panel shadow-panel">
            <%= project.markdown %>
          </div>
        </div> <!-- /large-12 col -->
      </div> <!-- /row -->
    </div> <!-- /panel pro-border -->
  <% end %> <!-- projects.each -->

</div> <!-- /panel -->
