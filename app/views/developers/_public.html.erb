<div class="panel">
  <div class="row">
    <div class="small-8 large-6 columns pro-info">
      <h3><%= @developer.name %></h3>
      <h5><%= @developer.profession %></h5>
      <h5><%= @developer.location %></h5>
      <h5>Github: <%= @developer.github_username %></h5>
    </div>
    <%# if @developer.image %>
      <div class="small-4 large-6 columns" style="position: relative;">
        <div class="avatar" style="position: absolute; right: 0px;">
          <img class="avatar-image" src="http://www.empireonline.com/images/uploaded/chuck-norris-uzis.jpg">
          <%#= developer.image %>
        </div>
      </div>
    <%# end %>
  </div>
  <div class="sliderdiv">
    <div id="slider" class="flexslider">
      <ul class="slides">
        <% @projects.each do |project| %>
          <li>
            <div class="row">
              <div class="large-12 columns">
                <h1>
                    <a href=<%= project.url %> >
                    <%= project.title %>
                    </a>
                </h1>
              </div>
            </div>
            <div class="row">
              <% if project.code_snippet %>
                <div class="large-6<%#= project.image ? 6 : 12 %> columns">
                  <div class="panel" id="code">
                    <% if project.code_snippet %>
                      <pre class="prettyprint"><%= project.code_snippet %></pre>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <%# if project.image %>
                <div class="large-<%= project.code_snippet ? 6 : 12 %> columns">
                  <div class="panel" id="image">
                    <%#= project.image %>

                  </div>
                </div>
              <%# end %>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <%= project.description %>
              </div>
            </div>
          </li>
        <% end %> <!-- projects.each -->
      </ul>
    </div>
  </div>
</div> <!-- /panel -->
