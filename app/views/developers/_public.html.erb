<div class="panel">
  <div class="sliderdiv">
    <div id="slider" class="flexslider">
      <ul class="slides">
        <% @projects.each do |project| %>
          <li>
            <div class="row">
              <div class="large-12 columns">
                <h1>
                  <% if project.url.match(/www.\w+.\w+/) %>
                    <a href=<%= project.url %> >
                  <% end %>
                    <%= project.title %>
                  <% if project.url.match(/www.\w+.\w+/) %>
                    </a>
                  <% end %>
                </h1>
              </div>
            </div>
            <div class="row">
              <% if project.code_snippet %>
                <div class="large-6<%#= project.image ? 6 : 12 %> columns">
                  <div class="panel" id="code">
                    <% if project.code_snippet %>
                      <pre class="prettyprint"><%= project.code_snippet %></pre>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <%# if project.image %>
                <div class="large-<%= project.code_snippet ? 6 : 12 %> columns">
                  <div class="panel" id="image">
                    <%#= project.image %>

                  </div>
                </div>
              <%# end %>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <%= project.description %>
              </div>
            </div>
          </li>
        <% end %> <!-- projects.each -->
      </ul>
    </div>
  </div>
</div> <!-- /panel -->
