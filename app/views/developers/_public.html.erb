<div class="panel pro-background">

  <div class="row">
    <div class="large-4 large-offset-4 columns vcenter">
      <h2><%= @developer.name %></h2>
      <h4><%= @developer.profession %></h4>
    </div>
  </div>
  <!-- Projects -->
  <% @projects.each_with_index do |project, i| %>
    <a name="<%= i %>"></a>
    <div class="panel pro-fill<%= i % 2 %>">
      <div class="row">
    <!-- Project title -->
        <div class="large-12 columns">
          <h1>
            <a href=<%= project.url %> >
              <%= project.title %>
            </a>
          </h1>
        </div> <!-- /large-12 col -->
      </div> <!-- /row -->
    <!-- Feature chunk -->
      <div class="row">
        <div class="large-9 columns">
          <div class="panel">
            This is the feature
          </div>
        </div> <!-- /large-12 col -->
    <!-- Feature description -->
        <div class="large-3 columns">
          <div class="panel">
            This is the feature description
          </div>
        </div> <!-- /large-12 col -->
      </div> <!-- /row -->
      <div class="row">

    <% if project.chunks.count > 1 %>
      <% project.chunks[1..-1].each_with_index do |chunk, index| %>
        <% if index % 2 == 0 %>
          <div class="row">
        <% end %>
        <%= render 'chunks/regular_display', chunk: chunk %>
        <% if index % 2 == 1 || index == project.chunks.count - 2 %>
          </div>
        <% end %>
      <% end %>
    <% end %>

    </div> <!-- /panel pro-border -->
  <% end %> <!-- projects.each -->

<!-- Profile -->
  <a name="profile"></a>
  <div class="panel pro-border">
    <div class="row">
      <div class="small-8 large-6 columns pro-info">
        <h3><%= @developer.name %></h3>
        <h5><%= @developer.profession %></h5>
        <h5>Location: <%= @developer.location %></h5>
        <h5>Github: <%= @developer.github_username %></h5>
        <h5>Github URL: <%= @developer.github_url %></h5>
        <h5><% link_to "@developer.email" %>Contact me</h5>
      </div>

      <div class="small-4 large-6 columns" style="position: relative;">
        <div class="avatar" style="position: absolute; right: 0px;">
          <img class="avatar-image" src="http://www.empireonline.com/images/uploaded/chuck-norris-uzis.jpg">
        </div>
      </div>
    </div>
  </div>

</div> <!-- /panel -->
