<div class="panel ">

  <div class="row">
    <div class="large-4 large-offset-4 columns vcenter">
      <div class="panel pro-border1">
        <h3><%= @developer.name %></h3>
        <h5><%= @developer.profession %></h5>
      </div>
    </div>
  </div>
  <!-- Projects -->
  <% @projects.each_with_index do |project, i| %>
    <a name="<%= i %>"></a>
    <div class="panel pro-border<%= i % 2 %>">
      <!-- <div class="panel"> -->
        <div class="row">
          <div class="large-12 columns">
            <h1>
              <% if project.url.match(/www.\w+.\w+/) %>
                <a href=<%= project.url %> >
              <% end %>
                <%= project.title %>
              <% if project.url.match(/www.\w+.\w+/) %>
                </a>
              <% end %>
            </h1>
          </div> <!-- /row -->
        </div> <!-- /large-12 col -->
        <div class="row">
          <% if project.code_snippet %>
            <div class="large-6<%#= project.image ? 6 : 12 %> columns">
              <div class="panel" id="code">
                <% if project.code_snippet %>
                  <pre class="prettyprint"><%= project.code_snippet %></pre>
                <% end %>
              </div>
            </div>
          <% end %>
          <%# if project.image %>
            <div class="large-<%= project.code_snippet ? 6 : 12 %> columns">
              <div class="panel" id="image">
                <%#= project.image %>
              </div>
            </div>
          <%# end %>
        </div> <!-- /row -->
        <div class="row">
          <div class="large-12 columns">
            <%= project.description %>
          </div>
        </div> <!-- /row -->
      <!-- </div>  --><!-- /panel -->
    </div> <!-- /panel callout -->
  <% end %> <!-- projects.each -->

<!-- Profile -->
  <a name="profile"></a>
  <div class="panel pro-border">
    <div class="row">
      <div class="small-8 large-6 columns pro-info">
        <h3><%= @developer.name %></h3>
        <h5><%= @developer.profession %></h5>
        <h5>Location: <%= @developer.location %></h5>
        <h5>Github: <%= @developer.github_username %></h5>
        <h5>Github URL: <%= @developer.github_url %></h5>
        <h5><% link_to "@developer.email" %>Contact me</h5>
      </div>
      <%# if @developer.image %>
        <div class="small-4 large-6 columns" style="position: relative;">
          <div class="avatar" style="position: absolute; right: 0px;">
            <img class="avatar-image" src="http://www.empireonline.com/images/uploaded/chuck-norris-uzis.jpg">
            <%#= developer.image %>
          </div>
        </div>
      <%# end %>
    </div>
  </div>

</div> <!-- /panel -->
