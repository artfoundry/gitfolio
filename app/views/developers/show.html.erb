<% if session[:developer_id] != @developer.id %>
<div class="pro_container">
  <div class="pro_vcenter">
    <div class="row">
      <div class="small-8 large-10 small-centered columns">
        <div class="shadow-panel">
          <%= render partial: 'public' %>
        </div> <!-- shadowpanel -->
      </div> <!-- small-8 large-10 -->
    </div> <!-- row -->
  </div> <!-- pro_vcenter -->
</div> <!-- pro_container -->
<% else %>
<div class="pro_container">
  <div class="pro_vcenter">
    <div class="row">
      <div class="small-8 large-10 small-centered columns">
        <div class="shadow-panel">
          <!-- Only show public tab if the user is logged in -->
          <% if session[:developer_id] == @developer.id %>
          <div class="section-container tabs" data-section="tabs">

            <!-- Public tab -->
            <section class="active">
              <p class="title" data-section-title><a href="#panel1">Public</a></p>
              <div class="content" data-section-content>
                <%= render partial: 'public' %>
              </div>
            </section>
            <!-- End Public tab -->

            <!-- Edit Projects tab -->
            <section>
              <p class="title" data-section-title><a href="#panel2">Projects</a></p>
              <div class="content" data-section-content>
                <%= render partial: 'edit_projects' %>
              </div>
            </section>
            <!-- End Edit Projects tab -->

            <!-- Edit Profile tab -->
            <section>
              <p class="title" data-section-title><a href="#panel3">Profile</a></p>
              <div class="content" data-section-content>
                <%= render partial: 'edit_profile' %>
              </div>
            </section>
            <!-- End Edit Profile tab -->

            <!-- Start Logout Tab -->
            <section>
              <p class="title" data-section-title><%= link_to "Logout", logout_path %></p>
            </section>
            <!-- End Logout Tab -->
          </div> <!-- section-container tabs -->
          <% end %> <!-- if session -->
        </div> <!-- shadowpanel -->
      </div> <!-- small-8 large-10 -->
    </div> <!-- row -->
  </div> <!-- pro_vcenter -->
</div> <!-- pro_container -->

<% end %>