<% @repositories.each do |repo| %>
  <div class="row">
    <div class="small-8 columns">
      <a href=<%=repo[:url]%> ><%= repo[:name] %></a><br>
      <% if repo[:description] != "" %>
        <%= repo[:description] %>
      <% else %>
        <em>no description given</em>
      <% end %>
    </div>
    <div class="small-4 columns">
      <%= button_to "Select File", get_files_for_repo_path(repo), class: "tiny button", method: :get %>
    </div>
  </div>
<% end %>
