<ul>
<% @repositories.each do |repo| %>
  <li>
    <a href=<%=repo[:url]%> ><%= repo[:name] %></a><br>
    <% if repo[:description] != "" %>
      <%= repo[:description] %>
    <% else %>
      <em>no descrption given</em>
    <% end %>
    <br>
    <%= button_to "Add to projects", project_from_repo_path(repo) %>
  </li>
<% end %>
</ul>