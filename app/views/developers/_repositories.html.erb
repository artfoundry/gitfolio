<!-- Add repo form modal -->
<div id="project-form-modal-repo" class="reveal-modal modal-pos">
  <% if @projects.count < 5 %>
    <% @repositories.each do |repo| %>
      <div class="row">
        <div class="small-8 columns">
          <a href=<%=repo[:url]%> ><%= repo[:name] %></a><br>
          <% if repo[:description] != "" %>
            <%= repo[:description] %>
          <% else %>
            <em>No descrption given</em>
          <% end %>
        </div>
        <div class="small-4 columns">
          <%= button_to "Add to projects", project_from_repo_path(repo), class: "tiny button" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <h4 class="subheader">You have created the maximum number of projects allowed.<br>Delete a project in order to add a new one.</h4>
  <% end %>
  <a class="close-reveal-modal">&#215;</a>
</div>
