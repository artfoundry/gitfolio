<!-- Project form modal -->
<div id="project-form-modal-<%= project.id %>" class="reveal-modal"style="display: none; -webkit-transform-origin: 0px 0px; opacity: 1; -webkit-transform: scale(1, 1); visibility: hidden; top: -100px;">
  <%= form_for project do |f| %>
    <fieldset>
      <div class="panel">
        <h5>Project</h5>
        <div class="row">
          <div class="large-4 columns">
            <%= f.label :title, 'Project Name' %>
            <%= f.text_field :title %>
          </div> <!-- /large-4 col -->
          <div class="large-4 columns">
            <%= f.label :url, 'Project URL' %>
            <%= f.text_field :url, placeholder: "http://www.url.com" %>
          </div> <!-- /large-4 col -->

          <div class="large-4 columns">
            <%= f.label :role, 'Project Role' %>
            <%= f.text_field :role %>
          </div> <!-- /large-4 col -->
        </div> <!-- /row -->

        <div class="row">
          <div class="large-12 columns">
            <%= f.label :markdown, 'Project Description' %>
            <%= f.text_area :markdown, :class => 'project_markdown', :size => "30x10" %>
          </div><!-- /large-12 col -->
        </div> <!-- /row -->


          <a class="close-reveal-modal">&#215;</a>
      </div> <!-- /panel -->
    </fieldset>
  <!-- nav buttons -->
    <div class="row">
      <div class="small-4 columns">
        <%= f.submit project.id ? "Edit Project": "Add Project", class: "button" %>
      </div>

  <% end %> <!-- /form_for -->


  <!-- Delete project button - must be OUTSIDE the form_for
  so it doesn't overwrite the add/edit button functionality -->
      <% if project.id %>
        <div class="small-4 small-offset-4 columns">
          <%= button_to "Delete Project", project_path(project.id), method: :delete, class: "button" %>
        </div>
      <% end %>
    </div> <!-- /row -->

  <div class="panel">
    <div class="row">
      <div id="html-container">
        <div class="large-12 columns html-output"></div>
      </div>
    </div>
  </div>

</div>
<!-- /modal -->
