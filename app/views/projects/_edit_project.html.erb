<div id="projectEditModal" class="reveal-modal">
  <form>
    <fieldset>
      <legend>Project</legend>

      <div class="row">
        <div class="large-4 columns">
          <label>Project name</label>
          <input type="text" placeholder="<%=@projects[1].title%>">
        </div> <!-- large-4 col -->
        <div class="large-4 columns">
          <label>Project URL</label>
          <input type="text" placeholder="<%=@projects[1].url%>">            
        </div> <!-- large-4 col -->
        <div class="large-4 columns">
          <label>Your role on the project</label>
          <input type="text" placeholder="<%#=@projects[1].role%>">
        </div> <!-- large-4 col -->
      </div> <!-- row -->

      <div class="row">
        <div class="large-12 columns">
          <label>Project Description</label>
          <textarea placeholder="<%=@projects[1].description%>"></textarea>
        </div><!-- large-12 col -->
      </div> <!-- row -->

      <div class="row">
        <div class="large-12 columns">
          <label>Collaborators</label>
          <input type="text" placeholder="<%#=@projects[1].collaborators%>"></textarea>
        </div><!-- large-12 col -->
      </div> <!-- row -->

      <div class="row">
        <div class="large-12 columns">
          <label>Sample code</label>
          <%#= render "code" %>
        </div><!-- large-12 col -->
      </div> <!-- row -->
    </fieldset>
  </form>
  <a class="close-reveal-modal">&#215;</a>
</div> <!-- modal -->