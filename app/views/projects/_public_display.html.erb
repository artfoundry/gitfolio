<a name="<%= i %>"></a>
<div class="panel pro-fill<%= i % 2 %>">

  <div class="row">
    <div class="large-12 columns">
      <h1>
        <a href=<%= project.url %> >
          <%= project.title %>
        </a>
      </h1>
    </div> <!-- /large-12 col -->
  </div> <!-- /row -->

<%= render 'chunks/feature_display', chunk: project.chunks.first %>

<% if project.chunks.count > 1 %>
  <% project.chunks[1..-1].each_with_index do |chunk, index| %>
    <% if index % 2 == 0 %>
      <div class="row">
    <% end %>
    <%= render 'chunks/regular_display', chunk: chunk %>
    <% if index % 2 == 1 || index == project.chunks.count - 2 %>
      </div>
    <% end %>
  <% end %>
<% end %>

</div> <!-- /panel pro-border -->