<%= form_for :describer, :url => chunks_path do |describer| %>
  <%= describer.hidden_field :project_id, :value => project.id %>
  <%= describer.label :title, 'title' %>
  <%= describer.text_field :title %>
  <%= describer.label :url, 'link' %>
  <%= describer.text_field :url %>
  <%= describer.label :textfield, 'description' %>
  <%= describer.text_area :textfield %>
  <%= describer.submit %>
<% end %>